struct OperationHelpView: View {
    let operation: OperationHelp

    @State private var showExample = false

    var body: some View {
        VStack(alignment: .leading, spacing: 8) {
            HStack {
                Text(operation.name)
                    .font(.headline)
                    .fontWeight(.semibold)
                Spacer()
                Button(showExample ? "Hide Example" : "Show Example") {
                    withAnimation {
                        showExample.toggle()
                    }
                }
                .buttonStyle(.borderedProminent)
            }

            Text(operation.description)
                .foregroundColor(.secondary)

            if !operation.parameters.isEmpty {
                VStack(alignment: .leading, spacing: 4) {
                    Text("Parameters:")
                        .font(.subheadline)
                        .fontWeight(.semibold)
                    ForEach(Array(operation.parameters.keys.sorted()), id: \.self) { key in
                        HStack {
                            Text("â€¢ \(key):")
                                .font(.system(.caption, design: .monospaced))
                            Text(operation.parameters[key] ?? "")
                                .font(.caption)
                                .foregroundColor(.secondary)
                        }
                    }
                }
                .padding(.leading)
            }

            if showExample {
                VStack(alignment: .leading) {
                    Text("Example:")
                        .font(.subheadline)
                        .fontWeight(.semibold)
                    Text(operation.example)
                        .font(.system(.caption, design: .monospaced))
                        .padding(8)
                        .background(Color.black.opacity(0.05))
                        .cornerRadius(6)

                    Text("Returns: \(operation.returns)")
                        .font(.caption)
                        .foregroundColor(.secondary)
                        .italic()
                }
                .transition(.opacity)
            }
        }
    }
}

